<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.theeagle.helloandroid.MainActivity"
    android:background="#9E9E9E">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:contentDescription="@string/image_view"
        android:src="@drawable/uda" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/identity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_view"
            android:src="@drawable/ic_perm_identity_black_24dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/identity"
            android:layout_toRightOf="@id/identity"
            android:padding="8dp"
            android:text="@string/name"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_view"
            android:src="@drawable/ic_location_on_black_24dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/address1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/location"
            android:layout_toRightOf="@id/location"
            android:padding="8dp"
            android:text="@string/address_1"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>


    <TextView
        android:id="@+id/address2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="8dp"
        android:text="@string/address2"
        android:textColor="@android:color/black"
        android:textSize="24sp"
        android:layout_marginStart="32dp"
        android:layout_marginLeft="32dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/telephone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:contentDescription="@string/image_view"
            android:src="@drawable/ic_local_phone_black_24dp"
            android:padding="4dp"/>

        <TextView
            android:id="@+id/phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/telephone"
            android:layout_toRightOf="@id/telephone"
            android:padding="8dp"
            android:text="@string/phone"
            android:textColor="@android:color/black"
            android:textSize="24sp" />
    </RelativeLayout>


</LinearLayout>
